[Unit]
Description=Falcom Arena (Socket.IO + Eventlet)
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/opt/falcom
Environment=FALCOM_HOME=/opt/falcom
Environment=FALCOM_PORT=5051
ExecStart=/opt/falcom/.venv/bin/python /opt/falcom/arena/arena.py
Restart=on-failure
RestartSec=3

[Install]
WantedBy=multi-user.target
